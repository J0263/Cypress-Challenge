{
    "extends": "../tsconfig.json",
    "compilerOptions": {
      "target": "ES2020",
      "lib": ["ES2020", "DOM"],
      "types": ["cypress", "node"],
      "outDir": "./dist",  // Output files go here
      "rootDir": "../",    // Set root directory to include both client and cypress
      "isolatedModules": false,
      "composite": true,
      "jsx": "react-jsx",
      "strict": true
    },
    "include": [
      "../client/src/**/*", // Include client source files
      "./**/*"              // Include Cypress files
    ]
  }